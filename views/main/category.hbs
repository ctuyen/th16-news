<!-- Home -->

<div class="home">
    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/images/footer.jpg"
        data-speed="0.8"></div>
    <div class="home_content_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content">
                        <div class="home_title">{{nameT}}</div>
                        <div class="breadcrumbs">
                            <ul class="d-flex flex-row align-items-start justify-content-start">
                                <li><a href="/">Trang chủ</a></li>
                                <li>{{nameT}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Container -->

<div class="content_container">

    <!-- Featured Posts -->
    <div class="featured_title">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section_title_container d-flex flex-row align-items-start justify-content-start">
                        <div>
                            <div class="section_title">Danh sách bài viết</div>
                            <div class="section_subtitle">{{nameT}}</div>
                        </div>
                        <div class="section_bar"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="featured_posts">

                        <!-- Post -->
                        <div class="featured_post post_h_large">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="featured_post_image"><img src="{{posts.0.urlthumbnail}}"
                                            alt="{{posts.0.urlthumbnail}}"
                                            onclick="window.location='/posts/{{posts.0.id}}';">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="post_content">
                                        <div class="post_category cat_technology"><a
                                                href="/categories/{{posts.0.idcategory}}">{{posts.0.category}}</a>
                                        </div>
                                        <!--tabs-->
                                        <div
                                            class="myA tags_content d-flex flex-row align-items-start justify-content-start flex-wrap">
                                            {{#each posts.0.tags}}
                                            <div class="tag"><a href="/tags/{{id}}">#{{name}}</a></div>
                                            {{/each}}
                                        </div>

                                        <div class="post_title"><a href="/posts/{{posts.0.id}}">{{posts.0.title}}</a>
                                        </div>
                                        <div class="post_info d-flex flex-row align-items-center justify-content-start">
                                            <div
                                                class="post_author d-flex flex-row align-items-center justify-content-start">
                                                <div>
                                                    <div class="post_author_image"><img src="{{posts.0.urlavatar}}"
                                                            alt=""></div>
                                                </div>
                                                <div class="post_author_name"><a href="#">{{posts.0.writer}}</a></div>
                                            </div>
                                            <div class="post_date"><a href="#">{{posts.0.date}}</a></div>
                                            <div class="post_comments ml-auto"><a href="#">Lượt xem:
                                                    {{posts.0.view}}</a></div>
                                        </div>
                                        <div class="post_text">
                                            <p>{{posts.0.summary}}</p>
                                        </div>
                                        <!--<div class="post_button trans_200"><a href="/posts/{{posts.0.id}}">read more</a></div>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-9">

                    <div class="posts">
                        {{#each posts}}

                        {{#if @index}}
                        <!-- Post -->
                        <div class="post_item post_h_large row">
                            <div class="col-lg-5">
                                <div class="post_image"><a href="/posts/{{id}}"><img src="{{urlthumbnail}}"
                                            alt="ảnh nền"></a>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="post_content">
                                    <div class="post_category cat_technology"><a href="javasript:;">{{category}}</a>
                                    </div>
                                    <div
                                        class="myA tags_content d-flex flex-row align-items-start justify-content-start flex-wrap">
                                        {{#each tags}}
                                        <div class="tag"><a href="/tags/{{id}}">#{{name}}</a></div>
                                        {{/each}}
                                    </div>
                                    <div class="post_title"><a href="/posts/{{id}}">{{title}}</a></div>
                                    <div class="post_info d-flex flex-row align-items-center justify-content-start">
                                        <div
                                            class="post_author d-flex flex-row align-items-center justify-content-start">
                                            <div>
                                                <div class="post_author_image"><img src="{{urlavatar}}"
                                                        alt="avatar tác giả"></div>
                                            </div>
                                            <div class="post_author_name"><a href="#">{{writer}}</a></div>
                                        </div>
                                        <div class="post_date"><a href="#">{{date}}</a></div>
                                        <div class="post_comments ml-auto"><a href="javascript:;">Lượt xem: {{view}}</a>
                                        </div>
                                    </div>
                                    <div class="post_text">
                                        <p>{{summary}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        {{/each}}

                    </div>

                    <!-- Load more button -->
                    <div class="load_more">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-circle">
                                {{#if previousPage.disabled}}
                                <li class="page-item disabled">
                                    <a class="page-link" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                {{else}}
                                <li class="page-item">
                                    <a class="page-link" aria-label="Previous" href="?page={{previousPage.value}}">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                {{/if}}
                                {{#each this.pages}}
                                {{#if active}}
                                <li class="page-item active"><a class="page-link" href="?page={{value}}">{{value}}</a>
                                </li>
                                {{else}}
                                <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>

                                {{/if}}
                                {{/each}}
                                {{#if nextPage.disabled}}
                                <li class="page-item disabled">
                                    <a class="page-link" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                {{else}}
                                <li class="page-item">
                                    <a class="page-link" aria-label="Next" href="?page={{nextPage.value}}">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>
                </div>

                <!-- Sidebar -->

                <div class="col-lg-3">
                    <div class="sidebar">

                        <!-- Extra -->
                        <div class="sidebar_extra">
                            <a href="#">
                                <div class="sidebar_title">Tiết mục quảng cáo</div>
                                <div class="sidebar_extra_container">
                                    <div class="background_image" style="background-image:url(/images/extra_2.jpg)">
                                    </div>
                                    <div class="sidebar_extra_content">
                                        <div class="sidebar_extra_title">30%</div>
                                        <div class="sidebar_extra_title">off</div>
                                        <div class="sidebar_extra_subtitle">Buy online now</div>
                                    </div>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>