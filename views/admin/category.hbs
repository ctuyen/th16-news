  <body>
    <div class="super">
      <div class="menu-left">
        <div class="menu-item selected"><a href="./category">Chuyên mục</a></div>
        <div class="menu-item"><a href="./tag">Thẻ</a></div>
        <div class="menu-item"><a href="./post">Bài viết</a></div>
        <div class="menu-item"><a href="./user">Người dùng</a></div>
      </div>
      <div class="right">
        <header class="header">
    
          <!-- Header Content -->
          <div class="header_content_container">
            <div class="container">
              <div class="row">
                <div class="col">
                  <div class="header_content d-flex flex-row align-items-center justfy-content-start">
                    <div class="logo_container">
                      <a href="#">
                        <div class="logo"><span>Salad</span>News</div>
                        <div class="logo_sub">Innovation & Technology Magazine</div>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </header>
    
        <div class="container-main">
          <div class="admin-label">Quản lý chuyên mục</div>
    
          <div class="edit">
            <h3 class="divider gradient">Thêm chuyên mục</h3>
    
            <div class="add-category">
              <form action="">
                <div class="form-item">
                  <label for="name">Tên</label>
                  <input id="name" type="text">
                </div>
                <div class="form-item">
                  <label for="parent">Chuyên mục cha</label>
                  <select name="parent" id="parent" class="parent">
                    <option value="-1">Trống</option>
                    <option value="46">Thời sự</option>
                    <option value="3">Công nghệ</option>
                    <option value="3">Giải trí</option>
                  </select>
                </div>
                <div class="form-item">
                  <label for="describe">Chi tiết</label>
                  <textarea name="describe" id="" cols="70" rows="3"></textarea>
                </div>
                <div class="form-item">
                  <input class="submit" type="submit" value="Add category">
                </div>
              </form>
            </div>
    
            <h3 class="divider gradient">Các chuyên mục</h3>
    
            <div class="categories">
              <div class="details">
                <table>
                  <tr>
                    <th>&nbsp;</th>
                    <th>Tên</th>
                    <th>Chi tiết</th>
                    <th>Lượt xem</th>
                    <th>Tác vụ</th>
                  </tr>
                  <tr>
                    <td><input type="checkbox" name="name1"></td>
