<div class="super">
  <div class="menu-left">
    <div class="menu-item selected"><a href="./category">Chuyên mục</a></div>
    <div class="menu-item"><a href="./tag">Thẻ</a></div>
    <div class="menu-item"><a href="./post">Bài viết</a></div>
    <div class="menu-item"><a href="./user">Người dùng</a></div>
  </div>
  <div class="right">
    <div class="container-main">
      <div class="admin-label">Quản lý chuyên mục</div>

      <div class="edit">
        <h3 class="divider gradient">Thêm chuyên mục</h3>

        <div class="add-category">
          <form action="/admin/category" method="POST">
            <div class="form-item">
              <label for="name">Tên</label>
              <input id="name" name="tagname" type="text">
            </div>
            <div class="form-item">
              <label for="parent">Chuyên mục cha</label>
              <select name="parent" id="parent" class="parent">
                <option value="0">Trống</option>
                {{#each fatherCates}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-item">
              <input class="submit" type="submit" value="Add category">
            </div>
          </form>
        </div>

        <h3 class="divider gradient">Các chuyên mục</h3>

        <div class="categories">
          <div class="details">
            <div class="details" style="height:260px;overflow:auto;">
              <table>
                <thead>
                  <th>&nbsp;</th>
                  <th>Tên</th>
                  <th>Tác vụ</th>
                </thead>

                {{#each categories}}
                <tr>
                  <td><input type="checkbox" name={{id}}></td>
                  <td>{{name}}</td>
                  <td>
                    <!-- Button modal trigger -->
                    <div class="btn btn-primary" data-toggle="modal" data-target="#categoryModal{{id}}">
                      Chỉnh sửa
                    </div>
                  </td>
                </tr>
                <!-- Modal change name-->
                <div class="modal fade" id="categoryModal{{id}}" tabindex="-1" role="dialog"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <form method="POST" action="/admin/category/{{id}}/changeName">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa thông tin chuyên mục
                          </h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <label for="oldName">Tên cũ:</label>
                          <input readonly class="form-control" id="oldName" type="text" value="{{name}}">
                          <div class="form-item">
                            <input name="id" type="hidden" id="id" type="text" value="{{id}}">
                          </div>
                          <div class="form-item">
                            <label for="name">Tên mới:</label>
                            <input name="name" id="name" type="text">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                          <button type="submit" class="btn btn-success">Lưu</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
                {{/each}}
              </table>
            </div>

            <!-- Button modal trigger -->
            <div class="btn btn-primary" data-toggle="modal" data-target="#deleteModal">Xóa</div>
          </div>

          <!-- Modal Delete-->
          <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Bạn có chắc chắn muốn XÓA mục đã chọn?</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Xóa</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>