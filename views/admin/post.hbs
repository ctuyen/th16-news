<div class="super">
  <div class="menu-left">
    <div class="menu-item"><a href="./category">Chuyên mục</a></div>
    <div class="menu-item"><a href="./tag">Thẻ</a></div>
    <div class="menu-item selected"><a href="./post">Bài viết</a></div>
    <div class="menu-item"><a href="./user">Người dùng</a></div>
  </div>
  <div class="right">
    <div class="container-main">
      <div class="admin-label">Quản lý bài viết</div>
      <div class="edit">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">Menu gi do</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu1">menu1</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu2">menu2</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu3">menu3</a>
          </li>
        </ul>
        
        <!-- Tab panes -->
        <div class="tab-content">
          <div id="home" class="container tab-pane active"><br>
            <h3 class="divider gradient">quan li bai viet</h3>
            {{!-- chen noi dung o day --}}
              <div class="tab-pane fade show active" id="approved" role="tabpanel" aria-labelledby="v-pills-home-tab">
                <div class="posts">
                  {{#each posts as |post postIndex|}}
                  <!-- Post -->
                  <div class="post_item post_h_large">
                    <div class="row">
                      <div class="col-lg-5">
                        <div class="post_image"><img src="{{post.urlthumbnail}}" alt="post_image"
                            onclick="window.location='/posts/{{id}}';">
                        </div>
                      </div>
                      <div class="col-lg-7">
                        <div class="post_content">
                          <div>
                            <a type="button" class="btn btn-warning pull-right" href="post/{{id}}/public" role="button">
                              <i class="fa fa-cloud-upload-alt" aria-hidden="true">Xuất bản</i>
            
                            </a>
            
                          </div>
                          <div class="post_category cat_technology"><a href="../category.html">{{post.category}}</a></div>
                          <div class="tags_content d-flex flex-row align-items-start justify-content-start flex-wrap">
                            {{#each post.tags}}
                            <div class="tag"><a href="#">{{name}}</a></div>
                            {{/each}}
                          </div>
                          <div class="post_title"><a href="/posts/{{id}}">{{post.title}}</a></div>
                          <div class="post_info d-flex flex-row align-items-center justify-content-start">
                            <div class="post_author d-flex flex-row align-items-center justify-content-start">
                              <div>
                                <div class="post_author_image"><img src="{{post.urlavatar}}" alt="author_avatar" width="16">
                                </div>
                              </div>
                              <div class="post_author_name"><a href="#">{{post.writer}}</a>
                              </div>
                            </div>
                            <div class="post_date"><a href="#">{{this.date}}</a></div>
                          </div>
                          <div class="post_text">
                            <p>{{this.summary}}</p>
                          </div>
                        </div>
                      </div>
                    </div>
                    {{/each}}
                  </div>
            
                </div>
              </div>
          </div>
          <div id="menu1" class="container tab-pane fade"><br>
            <h3 class="divider gradient">menu1</h3>
        
            {{!-- chen noi dung o day --}}
          </div>
          <div id="menu2" class="container tab-pane fade"><br>
            <h3 class="divider gradient">menu2</h3>
        
            
          </div>
          <div id="menu3" class="container tab-pane fade"><br>
            <h3 class="divider gradient">menu3</h3>
        
            
          </div>
        
        </div>


      </div>

    </div>
  </div>