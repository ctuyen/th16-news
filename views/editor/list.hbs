<div class="col-sm-9">
  <div class="content" id="Content">
    <div id="pending">
      <div class="posts">
        <!-- Post -->
        {{#each this.posts}}
        <div class="post_item post_h_large">
          <div class="row">
            <div class="col-lg-5">
              <div class="post_image"><img src="{{urlthumbnail}}" alt="hello thumbnail"
                  onclick="window.location='/posts/{{id}}';">
              </div>
            </div>
            <div class="col-lg-7">
              <div class="post_content">
                <div>
                  <div class="post_category cat_world"><a href="/categories">{{category}}</a></div>
                </div>
                <div class="myA tags_content d-flex flex-row align-items-start justify-content-start flex-wrap">
                  {{#each tags}}
                  <div class="tag"><a href="{{id}}">#{{name}}</a></div>
                  {{/each}}
                </div>
                <div class="post_title"><a href="/posts/{{id}}">{{title}}</a></div>
                <div class="post_info d-flex flex-row align-items-center justify-content-start">
                  <div class="post_author d-flex flex-row align-items-center justify-content-start">
                    <div>
                      <div class="post_author_image"><img src="{{urlavatar}}" alt="avatar {{writer}}"></div>
                    </div>
                    <div class="post_author_name"><a href="#">{{writer}}</a> </div>
                  </div>
                  <div class="post_date"><a href="#">{{date}}</a></div>
                </div>
                <div class="post_text">
                  <p>{{summary}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>